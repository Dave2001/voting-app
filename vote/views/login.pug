extends base

block vars
  - var title = 'Login'

block body
  div.maindiv
    br
    br
    div.logondiv
      h1 Log Into Your Account
    
      if error
        p ERROR: #{error}
      div.logonsubdiv
        form(method="post")
          label.logonlabel Email:
          input.logoninput(type="email", name="email", required=true)
          br
          br
          label.logonlabel Password:
          input.logoninput(type="password", name="password", required=true)
          br
          br
          input.butt(type="submit")
      
      br  
      a(href="/register") Register