extends base

block vars
  - var title = 'Polls'

block body

  div.maindiv
  test
    div.polldiv
      div.optiondiv
        form(id="poll-options", method="post")
          - var qid = questions._id
          - var quest = questions.question
          input(type="hidden" name="qid" id="qid" value= qid)
          br
          span #{quest}
          br
          br
          select(id="choice", name="choice", value="", onChange="this.form.submit();")
            option(disabled selected value) -- select an option --
            each option in options
              - var op = option.option
              - var opid = option._id
              option(value="" + opid + "")  #{op}
          br
          br
          input(type="button" value="Cancel" onClick="history.back();") 
          br
          br
                
            
        